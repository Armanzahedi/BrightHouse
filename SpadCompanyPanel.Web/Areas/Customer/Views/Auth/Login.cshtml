@using SpadCompanyPanel.Web.ViewModels
@model LoginCustomerViewModel
@{
    ViewBag.Title = "ورود به پنل کاربری";
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
}
<!--Page Title-->
<section class="page-title" style="background-image:url(/Content/Assets/images/background/4.jpg)">
    <div class="auto-container">
        <h1>ورود</h1>
        <ul class="page-breadcrumb">
            <li><a href="/">خانه</a></li>
            <li>ورود </li>
        </ul>
    </div>
</section>
<!--End Page Title-->
<!--Login Section-->
<section class="login-section">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="column col-lg-9 col-md-12 m-auto col-sm-12 wow fadeInRight">
                <!-- Login Form -->
                <div class="login-form register-card ">
                    <h2>ورود</h2>
                    <!--Login Form-->
                    @using (Html.BeginForm("Login", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "form" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.PhoneNumber) @(SpadCompanyPanel.Web.Resources.Resource.UserName)
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "text-dark" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "text-dark" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="checkbox" name="RememberMe" class="text-dark" id="RememberMe">&nbsp; <label for="RememberMe">@SpadCompanyPanel.Web.Resources.Resource.RememberMe</label>
                        </div>

                        <div class="form-group">
                            <button class="theme-btn btn-style-three" type="submit" name="submit-form"><span class="btn-title">ورود</span></button>
                        </div>

                        @*<div class="form-group pass">
                            <a href="#" class="psw">رمزعبور خود را فراموش کردم</a>
                        </div>*@
                    }
                </div>
                <!--End Login Form -->
            </div>

        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
<!-- login area start -->
<style>
    .field-validation-error span {
        color: darkred;
    }
</style>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
