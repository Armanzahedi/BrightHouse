@using SpadCompanyPanel.Infrastructure.Helpers;
@using SpadCompanyPanel.Core.Models;
@{
    var currentCurrencyId = CurrencyHelper.GetCurrencyId();
    var currentLang = LanguageHelper.GetCulture();
    var currencies = ViewBag.Currencies as List<Currency>;
}
<!-- Main Header-->
<header class="main-header header-style-three">
    <!--Header Top-->
    <div class="header-top">
        <div class="auto-container">
            <div class="inner-container clearfix">
                <ul class="login-signup ">
                    <li>

                        <a href="login.html">
                            <i class="fa fa-user"></i>
                            ورود
                        </a>
                    </li>
                </ul>
                <div class="top-right">

                    <span class="text-dark font-weight-bold">
                        @if (currentLang == 1)
                        {
                            <a href="javascript:void(0)" style="color: white" onclick="changeLanguage('en')">EN</a>
                        }
                        else
                        {
                            <a href="javascript:void(0)" style="color: white" onclick="changeLanguage('fa')">Fa</a>
                        }
                    </span>
                    <select name="currency" id="currency" class="header-option" onchange="changeCurrency()">
                        @foreach (var item in currencies)
                        {
                            <option value="@item.Id" @(item.Id == currentCurrencyId ? "selected='selected'" : null)>@item.Unit</option>
                        }
                    </select>
                </div>
                <div class="header-date">
                    <div id="clock"></div>
                    --
                    <span id="date"></span>

                </div>


            </div>
        </div>
    </div>
    <!-- End Header Top -->
    <!-- Header Upper -->
    <div class="header-upper">
        <div class="auto-container">
            <div class="clearfix">

                <div class="logo-outer">
                    <div class="logo">
                        <a href="/">
                            <img src="/Content/logo.png"
                                 data-src="Content/logo.png" alt="" title="">
                        </a>
                    </div>
                </div>

                <div class="upper-right clearfix">
                    <!--Info Box-->
                    <div class="upper-column info-box">
                        <div class="icon-box"><span class="flaticon-call-1"></span></div>
                        <ul>
                            <li><strong>تلفن های تماس</strong></li>
                            <li><a href="tel:02100000000">02100000000</a></li>
                        </ul>

                    </div>

                    <!--Info Box-->
                    <div class="upper-column info-box">
                        <div class="icon-box"><span class="flaticon-email-3"></span></div>
                        <ul>
                            <li><strong>ایمیل</strong></li>
                            <li><a href="mailto:support@arytheme.com">info@gmail.com</a></li>
                        </ul>
                    </div>
                    <div class="upper-column info-box">
                        <div class="icon-box"><i class="fab fa-facebook"></i></div>
                        <ul>
                            <li><strong>فیس بوک</strong></li>
                            <li><a href="#">Bright House</a></li>
                        </ul>
                    </div>
                    <div class="upper-column info-box">
                        <div class="icon-box"><i class="fab fa-instagram"></i></div>
                        <ul>
                            <li><strong>اینستاگرام</strong></li>
                            <li><a href="#">Bright House</a></li>
                        </ul>
                    </div>

                    <!--Info Box-->


                </div>
            </div>
        </div>

    </div>
    <!-- Header Upper -->
    <!--Header Lower-->
    <div class="header-lower">
        <div class="auto-container">
            <div class="main-box clearfix">
                <!--Nav Box-->
                <div class="nav-outer clearfix">
                    <!--Mobile Navigation Toggler-->
                    <div class="mobile-nav-toggler"><span class="icon flaticon-menu"></span></div>

                    <!-- Main Menu -->
                    <nav class="main-menu navbar-expand-lg navbar-light">
                        <div class="collapse navbar-collapse clearfix" id="navbarSupportedContent">
                            <ul class="navigation clearfix">
                                <li>
                                    <a href="/">صفحه اصلی</a>

                                </li>

                                <li><a href="/RealState/Index">راهنمای املاک</a></li>
                                <li><a href="/Blog/TurkeyGuide">اقامت کشور ترکیه</a></li>
                                <li><a href="/Blog/EuropeGuide">اقامت اروپا</a></li>
                                <li><a href="/Blog/UaeGuide">اقامت کشور امارات</a></li>
                                <li><a href="/Blog/">مقالات</a></li>
                                <li><a href="/News">اخبار</a></li>
                                <li><a href="/AboutUs">درباره ما</a></li>
                                <li><a href="/ContactUs">تماس با ما</a></li>
                            </ul>
                        </div>
                    </nav>
                    <!-- Main Menu End-->

                    <div class="outer-box">
                        <!--Search Box-->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Header Lower-->
    <!-- Sticky Header  -->
    <div class="sticky-header">
        <div class="auto-container clearfix">
            <!--Logo-->
            <div class="logo pull-right">
                <a href="index.html" title="">
                    <img src="Content/Assets/images/icons/empty.png" data-src="Content/logo.png"
                         alt="" title="">
                </a>
            </div>
            <!--Right Col-->
            <div class="nav-outer pull-left">
                <!--Mobile Navigation Toggler-->
                <div class="mobile-nav-toggler"><span class="icon flaticon-menu"></span></div>

                <!-- Main Menu -->
                <nav class="main-menu navbar-expand-lg">
                    <div class="navbar-collapse collapse clearfix">
                        <ul class="navigation clearfix">
                            <!--Keep This Empty / Menu will come through Javascript-->
                        </ul>
                    </div>
                </nav><!-- Main Menu End-->
            </div>
        </div>
    </div><!-- End Sticky Menu -->
    <!-- Mobile Menu  -->
    <div class="mobile-menu">
        <div class="menu-backdrop"></div>
        <div class="close-btn"><span class="icon flaticon-cancel-1"></span></div>

        <!--Here Menu Will Come Automatically Via Javascript / Same Menu as in Header-->
