<section class="property-search-section-three" style="background-image: url(Content/Assets/images/main-slider/3.jpg);">
    <div class="auto-container">
        <div class="content-box">
            <div class="title-box">
                <h2 class="mb-5">Bright House <span>انتخابی درخشان </span></h2>
                <h2>جستجوی املاک</h2>
            </div>

            <div class="property-search-form style-three">
                <form method="post" action="/">
                    <div class="row no-gutters">
                        <!-- Form Group -->
                        <div class="form-group col-lg-2 col-md-6 col-sm-12">
                            <select id="countryId" onChange="GetStates()">
                                <option value="0">کشور</option>
                                @foreach (var item in ViewBag.Countries)
                                {
                                    <option value="@item.Id">@item.Title</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-lg-2 col-md-6 col-sm-12">
                            <select id="stateId" onchange="GetCities()">
                                <option  value="0">استان</option>
                            </select>
                        </div>

                        <!-- Form Group -->
                        <div class="form-group col-lg-2 col-md-6 col-sm-12">
                            <select id="cityId">
                                <option  value="0">شهر</option>
                            </select>
                        </div>

                        <!-- Form Group -->
                        <div class="form-group col-lg-2 col-md-6 col-sm-12">
                            <select  id="planType">
                                <option value="0">ملک برای</option>
                                <option value="1">برای فروش</option>
                                <option value="2">پیش فروش</option>
                                <option value="3">برای اجاره</option>
                            </select>
                        </div>
                        <!-- Form Group -->
                        <div class="form-group col-lg-2 col-md-6 col-sm-12">
                            <select id="realStateType">
                                <option value="0">نوع ملک</option>
                                <option value="1">آپاتمان</option>
                                <option value="2">ویلا</option>
                                <option value="3">اداری</option>
                                <option value="4">تجاری</option>
                                <option value="5">زمین</option>
                            </select>
                        </div>
                        <!-- Form Group -->
                        <div class="form-group col-lg-2 col-md-6 col-sm-12">
                            <button type="button" onclick="searchForRealState()" class="theme-btn btn-style-two">
                                <span class="btn-title">جستجو</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

