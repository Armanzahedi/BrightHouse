                                <div class="text">@Model.Item2.ShortDescription</div>
                            </div>
                        </div>

                        <!-- Feature Block -->
                        <div class="feature-block-two col-lg-6 col-md-6 col-sm-12">
                            <div class="inner-box">
                                <span class="icon flaticon-home-2"></span>
                                <h4><a href="##">@Model.Item3.Title</a></h4>
                                <div class="text">@Model.Item3.ShortDescription</div>
                            </div>
                        </div>

                        <!-- Feature Block -->
                        <div class="feature-block-two col-lg-6 col-md-6 col-sm-12">
                            <div class="inner-box">
                                <span class="icon flaticon-protect"></span>
                                <h4><a href="##">@Model.Item4.Title</a></h4>
                                <div class="text">@Model.Item4.ShortDescription</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- image Column -->
            <div class="image-column col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="image-box wow fadeInRight">
                    <figure class="image">
                        <img src="Content/Assets/images/icons/empty.png" data-src="Content/Assets/images/resource/image-3.jpg"
                             alt="">
                    </figure>
                    <div class="contact-info">
                        <span class="icon fa fa-phone-volume"></span>
                        <a href="tel:@Model.Phone" class="number">@Model.Phone</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
