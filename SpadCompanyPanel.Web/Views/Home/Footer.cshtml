@model SpadCompanyPanel.Web.ViewModels.FooterViewModel
@using SpadCompanyPanel.Web.Resources;

<!-- Main Footer -->
<footer class="main-footer" style="background-image: url(/Content/Assets/images/background/3.jpg);">
    <div class="auto-container">
        <div class="upper-box">
            <div class="row">
                <!-- Upper column -->
                <div class="upper-column col-lg-3 col-md-12 col-sm-12">
                    <div class="footer-logo">
                        <figure class="image">
                            <a href="/">
                                <img src="Content/Assets/images/icons/empty.png"
                                     style="height: 112px"
                                     data-src="/Content/logo.png"
                                     alt="">
                            </a>
                        </figure>
                    </div>
                </div>

                <!-- Upper column -->
                <div class="upper-column col-lg-3 col-md-12 col-sm-12">
                    <h2 style="margin-top:25px;">@Resource.SubscribetoNewsletter</h2>
                </div>

                <!-- Upper column -->
                <div class="upper-column col-lg-6 col-md-12 col-sm-12">
                    <div class="subscribe-form">
                        <form method="post" id="newsLetterFormFooter" action="/Home/SubmitNewsLetterEmail">
                            <div class="form-group">
                                <input type="text" class="popup-email-inpt" id="newsLetterEmailFooter" name="newsLetterEmail" placeholder="@Resource.Enteryouremail">
                                <span class="col-md-12" id="newsLetterEmailValidationFooter" style="color:red;display:none"></span>
                                <button type="submit" class="theme-btn btn-style-two">
                                    <span class="btn-title">@Resource.Subject</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!--Widgets Section-->
        <div class="widgets-section">
            <div class="row">
                <!--Big Column-->
                <div class="big-column col-xl-6 col-lg-12 col-md-12 col-sm-12">
                    <div class="row">
                        <!--Footer Column-->
                        <div class="footer-column col-lg-6 col-md-6 col-sm-12">
                            <div class="footer-widget contact-widget">
                                <h2 class="widget-title">@Resource.TheWayForContact</h2>
                                <div class="widget-content">
                                    <ul class="contact-list">
                                        <li>
                                            <span class="fa fa-map-marker-alt"></span>
                                            @ViewBag.Address
                                        </li>
                                        <li><span class="fa fa-phone-volume"></span>@ViewBag.Phone</li>
                                        <li>
                                            <span class="fa fa-envelope"></span><a href="mailto:@ViewBag.Email">@ViewBag.Email</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!--Footer Column-->
                        <div class="footer-column col-lg-6 col-md-6 col-sm-12">
                            <div class="footer-widget cities-widget">
                                <h2 class="widget-title">@Resource.Cities</h2>
                                <div class="widget-content">
                                    <ul class="list clearfix">
                                        <li><a href="/RealState/Index">@Resource.Istanbul</a></li>
                                        <li><a href="/RealState/Index">@Resource.Antalya</a></li>
                                        <li><a href="/RealState/Index">@Resource.Dubai</a></li>
                                        <li><a href="/RealState/Index">@Resource.AbuDhabi</a></li>
                                        <li><a href="/RealState/Index">@Resource.Van</a></li>
                                        <li><a href="/RealState/Index">@Resource.Ankara</a></li>
                                        <li><a href="/RealState/Index">@Resource.Alanya</a></li>
                                        <li><a href="/RealState/Index">@Resource.Konya</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Big Column-->
                <div class="big-column col-xl-6 col-lg-12 col-md-12 col-sm-12">
                    <div class="row clearfix">
                        <div class="footer-column col-xl-8 col-lg-6 col-md-6 col-sm-12">
                            <!--Footer Column-->
                            <div class="footer-widget popular-posts">
                                <h2 class="widget-title">@Resource.RecentStates</h2>
                                <!--Footer Column-->
                                <div class="widget-content">
                                    @foreach (var item in ViewBag.RecentEstates)
                                    {
                                        <div class="post">
                                            <div class="thumb">
                                                <a href="/RealState/Details/@item.Id">
                                                    <img src="/Files/RealStateImages/@item.Image" data-src="/Files/RealStateImages/@item.Image" alt="" style="width:120px; height:90px;">
                                                </a>
                                            </div>
                                            <h4>
                                                <a href="/RealState/Details/@item.Id">
                                                    @item.ShortDescription
                                                </a>
                                            </h4>
                                            <span class="location">@item.Title</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <!--Footer Column-->
                        <div class="footer-column col-xl-4 col-lg-6 col-md-6 col-sm-12">
                            <div class="footer-widget links-widget">
                                <h2 class="widget-title">@Resource.Links</h2>
                                <div class="widget-content">
                                    <ul class="list clearfix">
                                        <li><a href="/Blog/investment-guide">راهنمای سرمایه گذاری</a></li>
                                        <li><a href="/Blog/area-guide">راهنمای منطقه</a></li>
                                        <li><a href="/Home/gallery">گالری</a></li>
                                        <li><a href="/Home/agents">مشاوران</a></li>
                                        <li><a href="/Home/rules">قوانین</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Footer Bottom-->
    <div class="footer-bottom">
        <div class="auto-container">
            <div class="inner-container clearfix">

                <div class="copyright-text">
                    <p>
                        © @Resource.Designedby <a href="https://spad.co">@Resource.Spad</a>
                    </p>
                </div>
                <div class="upper-column btn-box info-box">
                    <img src="Content/Assets/images/24-hours.png" alt="" class="service-hours">

                    <p class="text-white">@Resource.Weareavailable24hoursaday</p>

                </div>
            </div>
        </div>
    </div>
</footer>
<!-- End Main Footer -->