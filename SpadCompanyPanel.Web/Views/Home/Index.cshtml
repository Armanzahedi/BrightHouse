@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script>
        function GetStates() {
            $("#loading").show();
            var geoDivisionId = $("#countryId").find(":selected").val();
            $("#stateId").html('<option value="0">استان</option>');
            $.ajax({
                type: 'GET',
                url: '/RealState/GetGeoDivisionChildren?geoDivisionId=' + geoDivisionId,
                success: function (response) {
                    var html = '<option value="0">استان</option>';
                    try {
                        var data = JSON.parse(response);
                        if (data != null && data.length > 0) {
                            data.map(function (item) {
                                html += '<option value="' + item.id + '">' + item.title + '</option>';
                            });
                        }
                    } catch (e) {
                    }
                    $("#loading").hide();
                    $("#stateId").html(html);
                },
                error: function (data) {
                    console.log("error");
                    console.log(data);
                },
                comcurrentUnitlete: function () {
                }
            });
        }

        function GetCities() {
            $("#loading").show();
            var geoDivisionId = $("#stateId").find(":selected").val();
            $("#cityId").html('<option value="0">شهر</option>');
            $.ajax({
                type: 'GET',
                url: '/RealState/GetGeoDivisionChildren?geoDivisionId=' + geoDivisionId,
                success: function (response) {
                    var html = '<option value="0">شهر</option>';
                    try {
                        var data = JSON.parse(response);
                        data.map(function (item) {
                            html += '<option value="' + item.id + '">' + item.title + '</option>';
                        });
                    } catch (e) {
                    }
                    $("#loading").hide();
                    $("#cityId").html(html);
                },
                error: function (data) {
                    console.log("error");
                    console.log(data);
                },
                complete: function () {
                }
            });
        }
    </script>
    <script>
        function searchForRealState() {
            var countryId = $("#countryId").val();
            var stateId = $("#stateId").val();
            var cityId = $("#cityId").val();
            var planType = $("#planType").val();
            var realStateType = $("#realStateType").val();
            location.href = `/RealState?countryId=${countryId}&stateId=${stateId}&cityId=${cityId}&planType=${planType}&realStateType=${realStateType}`
        }
    </script>
}
