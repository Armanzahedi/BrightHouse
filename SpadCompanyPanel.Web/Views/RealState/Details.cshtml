                                                                        <i class="icon flaticon-play-button"
                                                                           aria-hidden="true"></i><span class="ripple"></span>
                                                                    </a>
                                                                    <h4>ارتفاعات اتاق</h4>
                                                                </div>
                                                            </div>*@
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    }

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 order-style-1">
                    <div class="large-12 columns mb-5" dir="ltr">
                        <!-- MAIN SLIDES -->
                        <div class="slider">
                            @for (int i = 1; i <= realStateGallery.Count; i++)
                            {
                                <div data-index="@i">
                                    <img src="/Files/RealStateImages/Gallery/@realStateGallery[i-1].Image" alt="One">
                                </div>
                            }
                        </div>

                        <!-- THUMBNAILS -->
                        <div class="slider-nav-thumbnails">
                            @for (int i = 1; i <= realStateGallery.Count; i++)
                            {
                                <div data-index="@i">
                                    @*<img src="/Files/RealStateImages/Gallery/@realStateGallery[i-1].Image" alt="One">*@
                                    <img src="/Files/RealStateImages/Gallery/@realStateGallery[i-1].Image" slide="slide_@i">
                                </div>
                            }
                        </div>
                    </div>
                </div>
