                                                        <div class="property-detail">

                                                            <h4>برنامه های طبقه</h4>
                                                            <div class="floor-plans">
                                                                <ul class="floor-info clearfix">
                                                                    <li class="title">طرح نمونه طبقه</li>
                                                                    <li>@plans[i].Plan.BathRooms حمام</li>
                                                                    <li>@plans[i].Plan.Rooms اتاق خواب</li>
                                                                    <li>@plans[i].Plan.Area مساحت</li>
                                                                </ul>
                                                                <div class="floor-image">
                                                                    <figure class="image">
                                                                        <img src="/Files/PlanFiles/PlanImages/@plans[i].Plan.Image"
                                                                             data-src="/Files/PlanFiles/PlanImages/@plans[i].Plan.Image" alt="">
                                                                    </figure>
                                                                </div>
                                                            </div>
                                                        </div>
