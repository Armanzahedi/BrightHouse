<!--Page Title-->
<section class="page-title" style="background-image:url(/Content/Assets/images/background/4.jpg)">
    <div class="auto-container">
        <h1>جزئیات املاک</h1>
        <ul class="page-breadcrumb">
            <li><a href="index.html">خانه</a></li>
            <li>جزئیات املاک</li>
        </ul>
    </div>
</section>
<!--End Page Title-->
<!-- Sidebar Page Container -->
<div class="sidebar-page-container pb-0">
    <div class="auto-container" style="max-width: 100%">
        <div class="property-info-box">
            <div class="row" style="max-width: 100%">
                <div class="about-property col-lg-8 col-md-12 col-sm-12">
                    <h2>@Model.Title</h2>
                    <ul class="property-info clearfix">
                        <li><i class="fa fa-expand"></i> @Model.Area مساحت</li>
                        <li><i class="fa fa-bed"></i> @Model.Bedroom اتاق های خواب</li>
                        <li><i class="fa fa-bath"></i> @Model.Bathroom سرویس بهداشتی</li>
                    </ul>
                </div>
                <div class="price-column col-lg-4 col-md-12 col-sm-12">
                    <div class="price"> @Model.Price.ToString("##,###")€ </div>
                    <div class="location"><i class="icon fa fa-map-marker-alt"></i> @Model.Location</div>
                </div>

                <div class="col-lg-6 order-style-2">
