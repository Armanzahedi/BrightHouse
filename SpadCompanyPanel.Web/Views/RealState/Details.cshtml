                                                                    <tr>
                                                                        <td><strong>عنوان:</strong> @plans[i].Plan.Title</td>
                                                                        <td><strong>نوع عرضه:</strong> @Type</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>اتاق ها:</strong>@plans[i].Plan.Rooms</td>
                                                                        <td><strong>مساحت:</strong>@plans[i].Plan.Area </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>سرویس بهداشتی:</strong>@plans[i].Plan.BathRooms</td>
                                                                        <td><strong>طبقه:</strong>@plans[i].Plan.FloorNo</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>قیمت:</strong>€ @plans[i].Plan.Price.ToString("##,###")</td>
                                                                        <td>
                                                                            @if (plans[i].Plan.RentPrice != null && plans[i].Plan.RentPrice > 0)
                                                                            {
                                                                            <span><strong>مبلغ اجاره:</strong>€ @plans[i].Plan.RentPrice.Value.ToString("##,###")</span>
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            </div>
                                                        </div>
